<html metal:use-macro="base.macros['base']">
    <div metal:fill-slot='content'>
      <p><a href="http://foodoverip.org${request.path}">A link to this
        "food"</a> </p>
        <div class="row">
            <div class="left span6">

                <blockquote>
                    <p>${data.text}/<p>
                    <small><a href="${request.route_url('user', user=data.from_user)}">${data.from_user_name}</a></small>
                </blockquote>

                <div tal:condition="location">
                    <h3>Location</h3>
                    <img src="http://maps.googleapis.com/maps/api/staticmap?center=${location[0]},${location[1]}&zoom=11&size=200x200&sensor=false">
                    <hr />
                    <img src="http://maps.googleapis.com/maps/api/streetview?size=200x200&location=${location[0]},${location[1]}&heading=235&sensor=false">
                </div>

            </div>
            <div class="span10 description">
              <p><img class="thumbnail"
                src="${request.static_url('foodoverip:/static/images/')}${data.id}"
                alt="${data.text}" title="${data.text}" /><br>
                <span><a href="http://foodoverip.org${request.path}">A link
                    to this "food"</a></span></p>
        </div>
    </div>
</div>
</html>
